<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ingredients_item_details_id"
    android:gravity="center"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="80dp"
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_ingredients_item_details_id"
            android:scaleType="centerCrop"
            android:src="@drawable/food_image"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="5dp"
        android:layout_height="8dp"/>
    <TextView
        android:textAlignment="center"
        android:id="@+id/title_ingredients_item_details_id"
        android:text="@string/soy_sauce"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"/>
    <TextView
        android:textAlignment="center"
        android:id="@+id/measure_ingredients_item_details_id"
        android:text="@string/_3_4_cup"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/primaryColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"/>

</LinearLayout>